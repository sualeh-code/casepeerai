# Database Configuration (Required)
# Get these from your Turso dashboard
DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# CasePeer Credentials (Required)
CASEPEER_USERNAME=YourUsername
CASEPEER_PASSWORD=YourPassword
CASEPEER_BASE_URL=https://my.casepeer.com

# Gmail Configuration (Required for OTP)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Optional Settings
OTP_RETRY_COUNT=10
OTP_RETRY_DELAY=5
PLAYWRIGHT_HEADLESS=false  # Set to true for production, false to see the browser locally
